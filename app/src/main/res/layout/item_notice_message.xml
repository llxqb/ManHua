<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_18"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_18"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@drawable/bg_white_round_solid_5"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-10-28 21:22"
        android:textColor="@color/color_80"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/message_head_icon"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/assistant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_tv" />


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_15"
        android:text="漫画小助手"
        android:textColor="@color/color26"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/message_head_icon"
        app:layout_constraintTop_toBottomOf="@id/date_tv" />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@id/message_head_icon" />

    <TextView
        android:id="@+id/message_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="欢迎加入我们的大家庭！超多火爆漫画独家连载中！希望你能看得开心，能在
这里创造独一无二的美好回忆！"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

</android.support.constraint.ConstraintLayout>
