<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_book_classification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_24"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_104"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_graph_4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12">

        <TextView
            android:id="@+id/book_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_30"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/label_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_name_tv"
            android:layout_marginTop="@dimen/dp_6" />

        <TextView
            android:id="@+id/support_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_recycler_view"
            android:layout_marginTop="@dimen/dp_20"
            android:drawablePadding="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_4"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_recycler_view"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toEndOf="@id/support_tv"
            android:drawableStart="@mipmap/title_comment"
            android:drawablePadding="@dimen/dp_2"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>


</LinearLayout>
