<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">

    <com.shushan.manhua.mvp.views.MoveTextView
        android:id="@+id/move_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/bg_black"
        android:gravity="center"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_6"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_24"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/dp_152"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/bg_white_round_solid_5"
            android:gravity="center"
            android:text="@string/AddBarrageDialog_cancel"
            android:textColor="@color/color_30"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="@dimen/dp_152"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_21"
            android:background="@drawable/bg_yellow_round_solid_5"
            android:gravity="center"
            android:text="@string/AddBarrageDialog_sure"
            android:textColor="@color/color_30"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</RelativeLayout>
