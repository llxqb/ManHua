<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_11">

        <TextView
            android:id="@+id/comment_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个好看吗？"
            android:textColor="@color/color_30"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/book_cover_iv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@id/comment_content_tv"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/reading_preference_fantasy" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_below="@id/comment_content_tv"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toEndOf="@id/book_cover_iv"
            android:background="#F6F6FA"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12">

            <TextView
                android:id="@+id/book_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:singleLine="true"
                android:text="第138话 拍卖会之狼"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_6"
                android:singleLine="true"
                android:text="这个保安有点邪" />
        </LinearLayout>


        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_cover_iv"
            android:layout_marginTop="@dimen/dp_11"
            android:text="37分钟前"
            android:textColor="@color/color_80"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:drawablePadding="@dimen/dp_5"
            android:text="@string/SentMessageAdapter_delete"
            android:textColor="@color/color_80"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/suggest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toStartOf="@id/delete_tv"
            android:drawableStart="@mipmap/title_praise_gray"
            android:drawablePadding="@dimen/dp_5"
            android:text="22"
            android:textColor="@color/color_80"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <View style="@style/line_height_1" />
</LinearLayout>
