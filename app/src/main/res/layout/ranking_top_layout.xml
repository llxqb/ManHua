<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_20">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_315"
        android:scaleType="centerCrop"
        android:src="@mipmap/bookcity_popular_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/back_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:text="Peringkat"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--排名第二名 -->
        <RelativeLayout
            android:id="@+id/ranking_2_rl"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_202"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@mipmap/ranking_list_topbg2">

            <ImageView
                android:id="@+id/ranking_2_iv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_104"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_graph_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/ranking_list_top2" />


            <TextView
                android:id="@+id/update_to_chapter_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_110"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9" />


            <TextView
                android:id="@+id/book_name_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ranking_2_iv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/author_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_name_2_tv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/ranking2_label_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author_2_tv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_write_stroke_30"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_3"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/ranking2_label_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author_2_tv"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@id/ranking2_label_1_tv"
                android:background="@drawable/bg_write_stroke_30"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_2"
                android:visibility="gone"
                android:paddingEnd="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <!--排名第一名 -->
        <RelativeLayout
            android:id="@+id/ranking_1_rl"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_222"
            android:background="@mipmap/ranking_list_topbg1">

            <ImageView
                android:id="@+id/ranking_1_iv"
                android:layout_width="@dimen/dp_101"
                android:layout_height="@dimen/dp_134"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_graph_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_6"
                android:src="@mipmap/ranking_list_top1" />


            <TextView
                android:id="@+id/update_to_chapter_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_130"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11" />


            <TextView
                android:id="@+id/book_name_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ranking_1_iv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/author_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_name_1_tv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/ranking_label_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author_1_tv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_write_stroke_30"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_2"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/ranking_label_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author_1_tv"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@id/ranking_label_1_tv"
                android:background="@drawable/bg_write_stroke_30"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_6"
                android:visibility="gone"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>


        <!--排名第三名 -->
        <RelativeLayout
            android:id="@+id/ranking_3_rl"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_202"
            android:layout_gravity="bottom"
            android:background="@mipmap/ranking_list_topbg3">

            <ImageView
                android:id="@+id/ranking_3_iv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_104"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_graph_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/ranking_list_top3" />


            <TextView
                android:id="@+id/update_to_chapter_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_110"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9" />


            <TextView
                android:id="@+id/book_name_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ranking_3_iv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/author_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_name_3_tv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/ranking3_label_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author_3_tv"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_write_stroke_30"
                android:paddingStart="@dimen/dp_6"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_6"
                android:visibility="gone"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/ranking3_label_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/author_3_tv"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@id/ranking3_label_1_tv"
                android:background="@drawable/bg_write_stroke_30"
                android:paddingStart="@dimen/dp_6"
                android:visibility="gone"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
