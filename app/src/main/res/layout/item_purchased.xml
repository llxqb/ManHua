<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_purchased_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_10"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <ImageView
        android:id="@+id/book_cover_iv"
        android:layout_width="@dimen/dp_133"
        android:layout_height="@dimen/dp_80"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_graph_2" />

    <TextView
        android:id="@+id/book_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_toEndOf="@id/book_cover_iv"
        android:textColor="@color/color_30"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/buy_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_name_tv"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/book_cover_iv"
        android:text="3 Chapter yang telah dibeli"
        android:textColor="@color/color_6d"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/all_chapter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_num_tv"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toEndOf="@id/book_cover_iv"
        android:textColor="@color/color_6d"
        android:textSize="@dimen/sp_13" />


</RelativeLayout>
