<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ranking_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_12">

    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_104"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/book_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/cover_iv"
        android:singleLine="true"
        android:textColor="@color/color_30"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_name_tv"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toEndOf="@id/cover_iv"
        android:textColor="@color/color_30"
        android:textSize="@dimen/sp_11" />


    <TextView
        android:id="@+id/update_to_chapter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_tv"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toEndOf="@id/cover_iv"
        android:textColor="@color/color_30"
        android:textSize="@dimen/sp_11" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/label_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_to_chapter_tv"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toEndOf="@id/cover_iv" />

</RelativeLayout>
