<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_reading_history_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:layout_marginTop="@dimen/dp_15"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <ImageView
        android:id="@+id/check_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_8"
        android:src="@mipmap/history_delete_unchoose"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/check_iv"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_graph_1" />


    <TextView
        android:id="@+id/book_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_13"
        android:singleLine="true"
        android:layout_toEndOf="@id/cover_iv"
        android:textColor="@color/color_30"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/read_chapter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_name_tv"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/cover_iv"
        android:singleLine="true"
        android:textColor="@color/color_6d"
        android:textSize="@dimen/sp_13" />


    <TextView
        android:id="@+id/remaining_chapter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_chapter_tv"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toEndOf="@id/cover_iv"
        android:textColor="@color/color_6d"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_chapter_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_13" />

</RelativeLayout>
