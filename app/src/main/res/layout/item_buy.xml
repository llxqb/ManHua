<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_buy_layout"
    android:layout_width="@dimen/dp_166"
    android:layout_height="@dimen/dp_90"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/dp_7"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/buy_un_check_bg"
    android:paddingTop="@dimen/dp_12">

    <TextView
        android:id="@+id/subscription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BuyAdapter_subscription"
        android:textColor="#83848D"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:text=" $ 19.99"
        android:textColor="#83848D"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subscription_tv" />

    <TextView
        android:id="@+id/original_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_12"
        android:text="$ 29.99/月"
        android:textColor="#83848D"
        android:textSize="@dimen/sp_11"
        app:layout_constraintStart_toEndOf="@id/current_price_tv"
        app:layout_constraintTop_toBottomOf="@id/subscription_tv" />


    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="送2000漫豆"
        android:textColor="#83848D"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_price_tv" />
</android.support.constraint.ConstraintLayout>
