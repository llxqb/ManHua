<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/book_iv"
        android:layout_width="@dimen/dp_162"
        android:layout_height="@dimen/dp_162"
        android:src="@mipmap/book_icon" />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_130"
        android:background="@drawable/bg_blue1_round_solid_30"
        android:gravity="center"
        android:text="今天"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/book_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_iv"
        android:text="霸道小叔，请轻撩"
        android:textColor="@color/color_30"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/book_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_name_tv"
        android:layout_marginTop="@dimen/dp_5"
        android:text="神秘世界，危险机遇并存"
        android:textColor="#989FAE"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/support_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_desc_tv"
        android:layout_marginTop="@dimen/dp_5"
        android:drawableStart="@mipmap/title_praise_gray"
        android:drawablePadding="@dimen/dp_5"
        android:text="99"
        android:textColor="@color/color_80"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_desc_tv"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@id/support_tv"
        android:drawableStart="@mipmap/title_comment"
        android:drawablePadding="@dimen/dp_5"
        android:text="990"
        android:textColor="@color/color_80"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/more_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BookShelfAdapter_more_tv"
        android:textColor="#A68AE1"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_130"
        android:gravity="center_horizontal"
        android:visibility="gone"
        />
</RelativeLayout>
