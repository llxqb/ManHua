<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_pay_choose_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">


    <LinearLayout
        android:id="@+id/pop_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bg_white_round_solid_5"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/dp_377"
        android:orientation="vertical">

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:textColor="@color/color_blue_btn"
            android:textSize="@dimen/sp_28" />

        <View
            style="@style/line_height_05"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15" />


        <LinearLayout
            android:id="@+id/google_pay_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google_pay_iv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/pay_hibeans_no_choose" />

            <TextView
                android:id="@+id/google_pay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/google_payment"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            style="@style/line_height_05"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/ahdi_pay_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ahdi_pay_iv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/pay_hibeans_no_choose" />

            <TextView
                android:id="@+id/ahdi_pay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/ahdi_payment"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            style="@style/line_height_05"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/uniPin_pay_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/uniPin_pay_iv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/pay_hibeans_no_choose" />

            <TextView
                android:id="@+id/uniPin_pay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/uniPin_payment"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            style="@style/line_height_05"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15" />
        <!--保存 -->
        <Button
            android:id="@+id/payment_btn"
            android:layout_width="@dimen/dp_228"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_blue2_round_20_selector"
            android:text="@string/Payment"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</RelativeLayout>


