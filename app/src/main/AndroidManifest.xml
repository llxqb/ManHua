<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shushan.manhua">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 允许程序设置内置sd卡的读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" /><!-- 调节亮度 -->

    <application
        android:name=".ManHuaApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".mvp.ui.activity.book.LongDeleteActivity" />
        <activity android:name=".mvp.ui.activity.mine.CheckInActivity" />
        <activity android:name=".mvp.ui.activity.mine.PurchasedActivity" />
        <activity android:name=".mvp.ui.activity.mine.FeedbackActivity" />
        <activity android:name=".mvp.ui.activity.setting.SettingActivity" />
        <activity android:name=".mvp.ui.activity.user.MessageActivity" />
        <activity android:name=".mvp.ui.activity.user.PersonalInfoActivity" />
        <activity android:name=".mvp.ui.activity.mine.TransactionDetailsActivity" />
        <activity android:name=".mvp.ui.activity.mine.BuyActivity" />
        <activity android:name=".mvp.ui.activity.mine.MemberCenterActivity" />
        <activity android:name=".mvp.ui.activity.book.SearchActivity" />
        <activity android:name=".mvp.ui.activity.book.ReadingHistoryActivity" />
        <activity android:name=".mvp.ui.activity.book.CommentDetailsActivity" />
        <activity android:name=".mvp.ui.activity.book.BookDetailActivity" />
        <activity android:name=".mvp.ui.activity.book.BarrageSettingActivity" />
        <activity
            android:name=".mvp.ui.activity.book.ReadActivity"
            android:windowSoftInputMode="stateVisible|adjustResize|stateHidden" />
        <activity
            android:name=".mvp.ui.activity.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.ui.activity.login.LoginActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>