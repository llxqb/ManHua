<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shushan.manhua">

    <application
        android:name=".ManHuaApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".mvp.ui.activity.mine.TransactionDetailsActivity"></activity>
        <activity android:name=".mvp.ui.activity.mine.BuyActivity" />
        <activity android:name=".mvp.ui.activity.mine.MemberCenterActivity" />
        <activity android:name=".mvp.ui.activity.book.SearchActivity" />
        <activity android:name=".mvp.ui.activity.book.ReadingHistoryActivity" />
        <activity android:name=".mvp.ui.activity.book.CommentDetailsActivity" />
        <activity android:name=".mvp.ui.activity.book.BookDetailActivity" />
        <activity android:name=".mvp.ui.activity.book.BarrageSettingActivity" />
        <activity android:name=".mvp.ui.activity.book.ReadActivity" />
        <activity
            android:name=".mvp.ui.activity.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.ui.activity.login.LoginActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>